
data Refnode {
    Refnode next;
    unknown val;
};

pred sls(x_1,y_2,l_3,u_4) := 
    (x_1->Refnode{next:y_2,val:l_3} & l_3=u_4)
    \/ (exists t_5,a_6. x_1->Refnode{next:t_5,val:l_3} * sls(t_5,y_2,a_6,u_4) & error & error);


checkentail sls(x,y,l,u) & error
    |- t->Refnode{next:y,val:u} * sls(a,t,l,r) & error;
